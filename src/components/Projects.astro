---
import ExpoIcon from "./icons/ExpoIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import ReactNativeIcon from "./icons/ReactNativeIcon.astro";
import LinkButton from "./LinkButton.astro";
import WebsiteIcon from "./icons/WebsiteIcon.astro";
import CSharpIcon from "./icons/CSharpIcon.astro";
import MSSQLIcon from "./icons/MSSQLIcon.astro";
import NextJsIcon from "./icons/NextJsIcon.astro";

type Tag = {
  name: string;
  class: string;
  icon: (_props: Record<string, any>) => any;
};

type Project = {
  title: string;
  description: string;
  github?: string;
  image: string;
  tags: Tag[];
  link?: string;
  target?: string;
};

const TAGS = {
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-gray-800 text-white",
    icon: ReactNativeIcon,
  },
  EXPO: {
    name: "Expo",
    class: "bg-white/80 text-black",
    icon: ExpoIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-gray-800 text-white",
    icon: JavaScriptIcon,
  },
  C_SHARP: {
    name: "C#",
    class: "bg-gray-800 text-white",
    icon: CSharpIcon,
  },
  MS_SQL: {
    name: "Microsoft SQL Server",
    class: "bg-white/80 text-black",
    icon: MSSQLIcon,
  },
  NEXT_JS: {
    name: "Next.js",
    class: "bg-white/80 text-black",
    icon: NextJsIcon,
  },
};
const PROJECTS: Project[] = [
  {
    title: "ChatGPT Text Client",
    description:
      "Lightweight and efficient client for interacting with OpenAI's ChatGPT-4o mini model. Built with a focus on responsiveness and usability, it features real-time message handling, a clean UI, and seamless API integration. Designed to provide an intuitive chatting experience while leveraging the power of AI-driven conversation.",
    github: "https://github.com/frederam/chat-gpt-client",
    link: "https://chat-gpt-client-sooty.vercel.app/",
    target: "_blank",
    image: "/projects/chat-gpt-client.webp",
    tags: [TAGS.NEXT_JS, TAGS.JAVASCRIPT],
  },
  {
    title: "Excel emulator",
    description:
      "Browser-based spreadsheet emulator that allows users to perform arithmetic operations and use built-in functions like SUM, AVG, MIN, MAX, ABS, ROUND, and IF. With an intuitive UI, users can navigate and interact seamlessly with spreadsheet data.",
    github: "https://github.com/frederam/projects-pages/tree/main/excel-clone",
    link: "https://frederick-projects.orbiter.website/excel-clone/",
    target: "_blank",
    image: "/projects/Excel.webp",
    tags: [TAGS.JAVASCRIPT],
  },
  {
    title: "React Native Jobs",
    description:
      "A job search application built with React Native and Expo, leveraging JavaScript for seamless functionality. The app integrates the Jsearch API as its primary job source, delivering reliable and up-to-date job listings.",
    github: "https://github.com/frederam/react-native-jobs",
    image: "/projects/RNJobs.webp",
    tags: [TAGS.REACT_NATIVE, TAGS.EXPO, TAGS.JAVASCRIPT],
    target: "_blank",
  },
  {
    title: "Importation Management and Payment Scheduling System",
    description:
      "Made for a large hardware store located in Nicaragua in order to manage their importations and schedule payments of imported products. It was developed using C# programing language, Microsoft SQL Server Database Engine and DevExpress Components.",
    image: "/projects/Halcon.webp",
    tags: [TAGS.C_SHARP, TAGS.MS_SQL],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github, target }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>
        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-100">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-400">{description}</div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github} target={target}>
                  <GitHubIcon class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link} target={target}>
                  <WebsiteIcon class="size-6" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</section>
